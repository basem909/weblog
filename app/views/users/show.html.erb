  <div class="postCont">
  <div class="pic"></div>
   <div class='userCard'>
    <h2><%= @user.name %></h2>
    <h3>Number of posts: <%= @posts.length %></h3>
   </div>
  </div>

 <div class='bio'>
  <h2>Bio:</h2>
  <p>
    <%= @user.bio %>
  </p>
</div> 

<% @posts.each do |post| %>
 <div class='post'>
  <h2><%= post.title %></h2>
  <p>
    <%= post.text %>
  </p>
  <h3>
    Comments: <%= post.comments.length %> 
    Likes: <%= post.likes.length %> </h3>
</div>
<% end %>

  <button>
    See all posts
  </button>
